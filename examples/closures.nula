def closure = func(name) {
    func(boolean) {
        if (boolean) {
            return "Hello " + name + "!";
        }

        return "Bye " + name + "!";
    }
}

def greet = closure("Misho");

log(greet(true));   # we expect the result to be "Hello Misho!"
log(greet(false));  # we expect the result to be "Bye Misho!"